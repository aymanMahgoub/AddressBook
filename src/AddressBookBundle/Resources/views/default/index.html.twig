{% extends "base.html.twig" %}
{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        {{ flashMessage }}
    {% endfor %}
    <div class="col-xl-12">
        <div class="card card-default">
            <div class="card-block">
                <div class="header-header">
                    <h3><i class="fa fa-users"></i> Contacts </h3>
                    <p class="title-description"> All Contacts </p>
                </div>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th><p> # </p></th>
                        <th><p> First Name </p></th>
                        <th><p> Last Name </p></th>
                        <th><p> E-mail </p></th>
                        <th><p> Birthday </p></th>
                        <th><p> Picture </p></th>
                        <th><p> Street </p></th>
                        <th><p> Building Number </p></th>
                        <th><p> Country </p></th>
                        <th><p> phone Number </p></th>
                        <th><p class="pull-right"> Actions </p></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>
                                <a data-toggle="modal"
                                   data-target="#user-{{ contact.id }}">{{ contact.id }}</a>
                            </td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.firstName }}</td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.lastName }}</td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.email }}</td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.birthday }}</td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.birthday }}</td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.picture }}</td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.street }}</td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.buildingNumber }}</td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.county }}</td>
                            <td data-toggle="modal" data-target="#user-{{ contact.id }}">{{ contact.countryCode . contact.number }}</td>
                            <td>
                                <div class="tasks-block pull-md-right">
                                    <ul class="item-list">
                                        <li class="item">
                                            <div class="item-col fixed item-col-actions-dropdown">
                                                <div class="item-actions-dropdown">
                                                    <a class="item-actions-toggle-btn ">
                                                            <span class="inactive">
                                                                <i class="fa fa-cog"></i>
                                                            </span>
                                                        <span class="active">
                                                                <i class="fa fa-chevron-circle-right"></i>
                                                            </span>
                                                    </a>
                                                    <div class="item-actions-block">
                                                        <ul class="item-actions-list">
                                                            {% if (app.user.id != user.id) %}
                                                                <li>
                                                                    <a class="remove"
                                                                       href="{{ path('/', {'id': user.id}) }}"
                                                                       onclick="return confirm('Are you sure you want to delete this Admin ?');">
                                                                        <i class="fa fa-trash-o"></i></a>
                                                                </li>
                                                            {% endif %}
                                                            <li>
                                                                <a class="edit" href="{{ path('/',{'id':user.id}) }}">
                                                                    <i class="fa fa-pencil"></i> </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
{% endblock %}
